dashboard_init: subroutine

	; set colors of dash
        ; nametable 1
	PPU_SETADDR $23e8
	lda #%11110001
        ldx #$f8
.23e8_loop
        sta PPU_DATA
        inx
        bne .23e8_loop
        
	PPU_SETADDR $23f0
	lda #%11111111
        ldx #$f0
.23f0_loop
        sta PPU_DATA
        inx
        bne .23f0_loop
        
        ; nametable 2
	PPU_SETADDR $27e8
	lda #%11110001
        ldx #$f8
.27e8_loop
        sta PPU_DATA
        inx
        bne .27e8_loop
        
	PPU_SETADDR $27f0
	lda #%11111111
        ldx #$f0
.27f0_loop
        sta PPU_DATA
        inx
        bne .27f0_loop
        
        ; set tiles of dash
	PPU_SETADDR $22c0
        lda #$04
        ldy #$20
.set_top_bar
	sta PPU_DATA
        dey
        bne .set_top_bar

        lda #$1d
        ldy #$10
        ldx #$00
.tile_dash_set_page1
	lda dashboard_bg_tiles,x
        sta PPU_DATA
        inx
        bne .tile_dash_set_page1
        
; setup page 2 for sprite 0 detection
	PPU_SETADDR $26c0
        lda #$04
        ldy #$20
.tile_dash_set_page2
        sta PPU_DATA
        iny
        bne .tile_dash_set_page2
	rts
        
