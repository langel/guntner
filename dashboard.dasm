; GET DASH UPDATES READY TO RENDER
dashboard_update: subroutine

; SCORE
	lda score_00______
        asl
        tax
        lda decimal_table,x
        sta score_10000000
        inx
        lda decimal_table,x
        sta score_1000000
        
	lda score_00____
        asl
        tax
        lda decimal_table,x
        sta score_100000
        inx
        lda decimal_table,x
        sta score_10000
        
	lda score_00__
        asl
        tax
        lda decimal_table,x
        sta score_1000
        inx
        lda decimal_table,x
        sta score_100
        
	lda score_00
        asl
        tax
        lda decimal_table,x
        sta score_10
        inx
        lda decimal_table,x
        sta score_1

        
; UPDATE TIMER DIGITS
; frames 1s
	inc timer_frames_1s
        lda #$0a
        cmp timer_frames_1s
        bne .timer_done
        lda #$00
        sta timer_frames_1s
; frames 10s
	inc timer_frames_10s
        lda #$06
        cmp timer_frames_10s
        bne .timer_done
        lda #$00
        sta timer_frames_10s
; seconds 1s
	inc timer_seconds_1s
        lda #$0a
        cmp timer_seconds_1s
        bne .timer_done
        lda #$00
        sta timer_seconds_1s
; seconds 10s
	inc timer_seconds_10s
        lda #$06
        cmp timer_seconds_10s
        bne .timer_done
        lda #$00
        sta timer_seconds_10s
; minutes 1s
	inc timer_minutes_1s
        lda #$0a
        cmp timer_minutes_1s
        bne .timer_done
        lda #$00
        sta timer_minutes_1s
; minutes 10s
	; we really checking this?
        ; let it go into tile limbo
	inc timer_minutes_10s
.timer_done

